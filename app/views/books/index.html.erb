<h2>Books</h2>

<table class="table">
 <thead>
  <tr>
   <th>Title</th>
   <th>Opiniony</th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>
  <tr>
   <td>
    <%= link_to book_path(book.id) do %>
     <%= book.title %>
    <% end %>
   </td>
   <td><%= book.body %></td>
  </tr>
  <% end %>
 </tbody>
</table>


<h2>New book</h2>
 
<%= form_with model:Book.new , url:'/books',method: :post do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Opinion</h4>
 <%= f.text_area :body %> <br/>

 <%= f.submit 'Create Book' %>
<% end %>