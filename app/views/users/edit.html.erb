<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container">
    <div class="row">
      <div class="col-md-8 mx-auto">
      <h2>User info</h2>
      
       <% if @user.errors.any? %>
          <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
         <% end %>
         
        <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label> <br/>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label> <br/>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="user_Introduction">Intoroduction</label> <br/>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User",class: "btn btn-secondary"  %>
        <% end %>
      </div>
    </div>
  </div>
</main>