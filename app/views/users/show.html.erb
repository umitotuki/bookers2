<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<p><%= link_to "プロフィール編集", edit_user_path %></p>

<table class="table">
 <thead>
  <tr>
   <th>Title</th>
   <th>Opinion</th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
   <td>
    <%= link_to book_path(book.id) do %>
     <%= book.title %>
    <% end %>
   </td>
   <td><%= book.body %></td>
  </tr>
  <% end %>
 </tbody>
</table>